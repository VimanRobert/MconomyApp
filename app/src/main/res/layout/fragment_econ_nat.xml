<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".macrodir.EconNatFragment"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="80sp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/toptextview"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="@string/completati_campurile_goale_pentru_a_primi_informatii"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/warningtext"
            android:layout_width="293dp"
            android:layout_height="48dp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="@string/warning_text"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toTopOf="@+id/consumid_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toptextview" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/consumid_title"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:autofillHints=""
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/warningtext">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/consumid"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@color/white"
                android:hint="@string/consum"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/investitiiid_title"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:autofillHints=""
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/consumid_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/investitiiid"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@color/white"
                android:hint="@string/investitii"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/exporturiid_title"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:autofillHints=""
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/investitiiid_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/exporturiid"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@color/white"
                android:hint="@string/exporturi"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/importuriid_title"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:autofillHints=""
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exporturiid_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/importuriid"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@color/white"
                android:hint="@string/importuri"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cheltuieliGuvid_title"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:autofillHints=""
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/importuriid_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cheltuieliGuvid"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@color/white"
                android:hint="@string/cheltuieli_guvernamentale"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/venit_rez_din_strainatate_title"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:autofillHints=""
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cheltuieliGuvid_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/venit_rez_din_strainatate"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@color/white"
                android:hint="@string/venituri_rezidenti_din_strainatate"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/venit_rez_straini_title"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:autofillHints=""
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venit_rez_din_strainatate_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/venit_rez_straini"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@color/white"
                android:hint="@string/venituri_rezidenti_straini"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/calculeazaP"
            android:layout_width="240dp"
            android:layout_height="56dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="86dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/calculeaza"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venit_rez_straini_title"
            tools:targetApi="s" />

        <TextView
            android:id="@+id/pibText"
            android:layout_width="122dp"
            android:layout_height="36dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/pib"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/pibInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculeazaP" />

        <TextView
            android:id="@+id/pnbText"
            android:layout_width="122dp"
            android:layout_height="36dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/pnb"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/pnbInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pibText" />


        <TextView
            android:id="@+id/pibInput"
            android:layout_width="137dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="39dp"
            android:gravity="center"
            android:text="@string/_0_mil"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pibText"
            app:layout_constraintTop_toBottomOf="@+id/calculeazaP" />

        <TextView
            android:id="@+id/pnbInput"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="@string/_0_mil"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pnbText"
            app:layout_constraintTop_toBottomOf="@+id/pibInput" />


        <TextView
            android:id="@+id/viewEconType"
            android:layout_width="260dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="@string/tipul_economiei_va_aparea_aici_dupa_generarea_calcului"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="854dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculeazaP"
            android:layout_marginTop="130dp"
            />

        <Button
            android:id="@+id/to_ex_indicatori"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="86dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/vezi_ce_semnifica_acesti_indicatori"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewEconType" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>